<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp"
    tools:context=".ReportHistoryActivity">

    <!-- 제목 -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="제보 내역"
        android:textColor="@color/blue_90"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 토글 버튼 (재난 유형 필터) -->
    <ToggleButton
        android:id="@+id/toggle_disaster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="필터 닫기"
        android:textOff="필터 열기"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 재난 필터 목록 -->
    <LinearLayout
        android:id="@+id/disaster_list_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/toggle_disaster"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_typhoon"
            style="@style/DisasterButton"
            android:text="@string/disaster_typhoon"/>

        <Button
            android:id="@+id/btn_weather"
            style="@style/DisasterButton"
            android:text="@string/disaster_weather"/>

        <Button
            android:id="@+id/btn_earthquake"
            style="@style/DisasterButton"
            android:text="@string/disaster_geology"/>

        <Button
            android:id="@+id/btn_epidemic"
            style="@style/DisasterButton"
            android:text="@string/disaster_epidemic"/>

        <Button
            android:id="@+id/btn_fire"
            style="@style/DisasterButton"
            android:text="@string/disaster_fire"/>

        <Button
            android:id="@+id/btn_fine_dust"
            style="@style/DisasterButton"
            android:text="@string/disaster_fine_dust"/>
    </LinearLayout>

    <!-- 필터 버튼 -->
    <Button
        android:id="@+id/btn_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선택한 필터 적용"
        app:layout_constraintTop_toBottomOf="@id/disaster_list_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- 선택된 필터 표시 -->
    <TextView
        android:id="@+id/tv_selected_disasters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="적용된 필터: 없음"
        android:textSize="16sp"
        android:textColor="@color/grey_80"
        app:layout_constraintTop_toBottomOf="@id/btn_filter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
