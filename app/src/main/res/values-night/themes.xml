<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 🌙 Night Mode 테마 (기본 ActionBar 포함) -->
    <style name="Theme.DisasterAlert" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color (어두운 테마에서의 색상 조정) -->
        <item name="colorPrimary">@color/blue_70</item>
        <item name="colorPrimaryVariant">@color/blue_80</item>
        <item name="colorOnPrimary">@color/white</item> <!-- 기존 black → white (가독성 개선) -->

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/yellow_60</item>
        <item name="colorSecondaryVariant">@color/yellow_30</item>
        <item name="colorOnSecondary">@color/white</item> <!-- 기존 black → white -->

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- 🌙 Night Mode에서 NoActionBar 테마 추가 -->
    <style name="Theme.DisasterAlert.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue_70</item>
        <item name="colorPrimaryVariant">@color/blue_80</item>
        <item name="colorOnPrimary">@color/white</item> <!-- 기존 black → white -->
        <item name="colorSecondary">@color/yellow_60</item>
        <item name="colorSecondaryVariant">@color/yellow_30</item>
        <item name="colorOnSecondary">@color/white</item> <!-- 기존 black → white -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
