<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 배경색: 반투명 흰색 -->
    <solid android:color="#CCFFFFFF" />

    <!-- 테두리: 1dp, 회색 -->
    <stroke
        android:width="1dp"
        android:color="#888888" />

    <!-- 모서리 둥글게: 반경 8dp -->
    <corners android:radius="8dp" />

    <!-- (선택) 패딩 내부 여백 -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
